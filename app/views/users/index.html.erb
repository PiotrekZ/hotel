<h1>Lista użytkowników</h1>

<table border=1>
  <tr>
    <th>Login</th>
    <th>Hasło</th>
    <th>Imię</th>
    <th>Nazwisko</th>
    <th>Ulica</th>
    <th>Nr domu</th>
    <th>Miasto</th>
    <th>Kod pocztowy</th>
    <th>Rola</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.password %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.street %></td>
    <td><%= user.house %></td>
    <td><%= user.city %></td>
    <td><%= user.zip_code %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Pokaż', user %></td>
    <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
    <td><%= link_to 'Usuń', user, :confirm => 'Usunąć użytkownika?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

